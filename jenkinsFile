pipeline {
    environment {
        registry = "rihemsahbeni/achats"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Git') {
            steps {
                echo "git";
                git branch : 'rihem-sahbeniT',
                url: 'https://github.com/RihemSahbeni/dev_achats.git'
            }
        }
     
        stage('MVN CLEAN') {
            steps {
                sh 'mvn clean'
            }
        }
       
        stage('MVN COMPILE') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('MVN SONARQUBE') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }
        stage('MVN Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage ('NEXUS DEPLOY') {
            steps {
                sh 'mvn deploy -DskipTests'
            }
        }
       
        stage('MVN PACKAGE') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }
        stage('Building our image') {
            steps {
                script {
                    dockerImage = docker.build registry +":$BUILD_NUMBER"
                }
            }
        }
        stage('Deploy our image') {
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Cleaning up') {
            steps {
                echo "docker rmi $registry:$BUILD_NUMBER "
                sh "docker rmi $registry:$BUILD_NUMBER "
        }
    }
        stage('Start container') {
             steps {
                echo 'docker-compose up -d '
        }
            }
    }
     post{
        always{
            mail to: "rihem.sahbeni@esprit.tn",
            subject: "Jenkins",
            body: "build finished"
        }
    }
}
